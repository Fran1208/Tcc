<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/azul_claro"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/foto_filme"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="10dp"

        android:src="@drawable/cruella"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Nome_filme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CRUELLA"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginStart="140dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toEndOf="@id/foto_filme"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/Descricao_filme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="descricao"
        android:layout_marginStart="140dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:textSize="12sp"
        android:maxLines="4"
        app:layout_constraintTop_toBottomOf="@id/Nome_filme"
        app:layout_constraintStart_toEndOf="@id/foto_filme"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/preco_filme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Inteira: 30 R$ /  Meia: 15 R$"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/Descricao_filme"
        app:layout_constraintStart_toEndOf="@id/foto_filme"/>

</androidx.constraintlayout.widget.ConstraintLayout>